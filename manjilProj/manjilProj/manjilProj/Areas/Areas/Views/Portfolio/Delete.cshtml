@model Entity.Model.PortfolioAccount
@{
    Layout = ViewBag.Layout;
}




<h3>Are you sure you want to delete this Portfolio?</h3>
<div>
    <h4>PortfolioAccount</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="@Model.AccountNumber"></label>
            @*@Html.DisplayNameFor(model => model.AccountNumber)*@
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.AccountNumber)*@
           @Model.AccountNumber
        </dd>
        <dt>
            <label asp-for="@Model.AccountName"></label>
            @*@Html.DisplayNameFor(model => model.AccountName)*@
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.AccountName)*@
            @Model.AccountName
        </dd>
        <dt>
            <label asp-for="@Model.EntryDate"></label>
            @*@Html.DisplayNameFor(model => model.EntryDate)*@
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.EntryDate)*@
            @Model.EntryDate.ToString("yyyy/MM/dd")
        </dd>
        <dt>
            <label asp-for="@Model.EntryUserID"></label>
            @*@Html.DisplayNameFor(model => model.EntryUserID)*@
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.EntryUserID)*@
            @Model.EntryUserID
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-controller="Portfolio" asp-route-area="Areas"
          data-ajax="true" data-ajax-method="POST" data-ajax-success="onSuccess(data)">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index" asp-controller="Portfolio" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
           data-ajax-update="#Manjil-body" id="Index">Back to List</a>
    </form>
</div>
<script type="text/javascript">
    function onSuccess(data) {

        if (data.status == 1) {
            alert(data.message);
            $('#Index').click();
        }
        else {
            alert(data.message);

        }
    }
</script>