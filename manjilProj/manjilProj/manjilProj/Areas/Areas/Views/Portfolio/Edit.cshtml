@model Entity.Model.PortfolioAccount
@{
    Layout = ViewBag.Layout;
}


<h4>Update PortfolioAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-sm-offset-1">
        <form asp-action="Edit" asp-controller="Portfolio" asp-area="Areas" data-ajax="true" data-ajax-method="POST" data-ajax-success="onSuccess(data)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Portfolio" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
       data-ajax-update="#Manjil-body" id="Index">Back to List</a>
</div>

<script>
    function onSuccess(data) {
        if (data.status == 1) {
            alert(data.message);
            $('#Index').click();
        }
        else {
            alert(data.message);

        }
    }
</script>