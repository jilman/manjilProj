@model Entity.ViewModel.StockReceiveMastVM

@{
    Layout = ViewBag.Layout;
}


<h4>Details Stock Receive </h4>
<hr />

    <div class="row">

        <div class="col-md-12 col-sm-offset-1">
            <form asp-action="Edit" asp-controller="StockReceiveMasts" asp-route-area="Areas"
              data-ajax="true" data-ajax-method="POST">
               
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="col-md-4">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ValueDate" class="control-label"></label>
                            <input asp-for="ValueDate" class="form-control" placeholder="____/__/__" disabled="disabled" />
                            <span asp-validation-for="ValueDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PortfolioAcId" class="control-label"></label>
                            <select asp-for="PortfolioAcId" class="form-control" asp-items="@ViewBag.PortfolioAcId" disabled="disabled">
                                <option value="0">Select</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Remarks" class="control-label"></label>
                            <input asp-for="Remarks" class="form-control" disabled="disabled" />
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>

                <div class="form-group col-md-10">
                    <table class="table table-bordered col-md-12" id="detail_table">
                        <thead class="md-default">
                            <tr>
                                <th class="col-md-3  ">
                                    Stock Name
                                </th>
                                <th class="col-md-1  ">
                                    OwnerShip Date
                                </th>
                                <th class="col-md-1  ">
                                    Qty
                                </th>
                                <th class="col-md-1  ">
                                    Rate
                                </th>
                                <th class="col-md-1  ">
                                    Amount
                                </th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                                foreach (var item in Model.StockRecieveDetlVM)
                                {
                                    var amount = item.Qty * item.Rate;
                                    <tr>
                                        <td>
                                            <input type="hidden" name="StockRecieveDetlVM[@i].StockId" value="@item.StockId" readonly="readonly" autocomplete="off" />
                                            <input type="hidden" name="StockRecieveDetlVM[@i].Id" value="@item.Id" readonly="readonly" autocomplete="off" class="ze-id" />
                                            <input type="hidden" name="StockRecieveDetlVM[@i].Flag" value="0" readonly="readonly" autocomplete="off" class="ze-flag" />
                                            <input type="hidden" name="StockRecieveDetlVM[@i].MastId" value="@item.MastId" readonly="readonly" autocomplete="off" />
                                            <input type="text" name="StockRecieveDetlVM[@i].StockName" value="@item.StockName" readonly="readonly" autocomplete="off" disabled="disabled" />
                                        </td>
                                        <td>
                                            <input type="text" name="StockRecieveDetlVM[@i].OwnershipDate" value="@item.OwnershipDate.ToString("yyyy/MM/dd")" readonly="readonly" autocomplete="off" disabled="disabled"/>
                                        </td>
                                        <td>
                                            <input type="text" name="StockRecieveDetlVM[@i].Qty" value="@item.Qty" readonly="readonly" autocomplete="off" class="text-right" disabled="disabled" />
                                        </td>
                                        <td>
                                            <input type="text" name="StockRecieveDetlVM[@i].Rate" value="@item.Rate" readonly="readonly" autocomplete="off" class="text-right" disabled="disabled" />
                                        </td>
                                        <td>
                                            <input type="text" name="StockRecieveDetlVM[@i].Amount" value="@amount" readonly="readonly" autocomplete="off" class="text-right" disabled="disabled" />
                                        </td>
                                       
                                    </tr>
                                    i++;
                                }
                            }
                            @*<tr>
                                <td>
                                    <select id="StockId" class="form-control" asp-items="@ViewBag.StockId">
                                        <option value="0">Select</option>
                                    </select>
                                </td>
                                <td>
                                    <input id="OwnershipDate" class="form-control input-sm " autocomplete="off" placeholder="____-__-__" />
                                </td>
                                <td>
                                    <input id="Qty" class="form-control input-sm  text-right get-amount" autocomplete="off" />
                                </td>
                                <td>
                                    <input id="Rate" class="form-control input-sm  text-right get-amount" autocomplete="off" />
                                </td>
                                <td>
                                    <input id="Amount" class="form-control input-sm  text-right" readonly="readonly" />
                                </td>
                                <td>
                                    <button type="button" class="btn" id="btn-add" data-target="">Add</button>
                                    <button type="button" class="btn " id="btn-clear">clear</button>
                                </td>
                            </tr>*@
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="StockReceiveMasts" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
       data-ajax-update="#Manjil-body" >Edit</a> |
    <a asp-action="Index" asp-controller="StockReceiveMasts" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
       data-ajax-update="#Manjil-body" >Back to List</a>
</div>

