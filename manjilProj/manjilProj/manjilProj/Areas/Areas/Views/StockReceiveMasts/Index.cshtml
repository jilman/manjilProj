@model IEnumerable<Entity.ViewModel.StockReceiveMastVM>

@{
    Layout = ViewBag.Layout;
}

<div class="form-horizontal col-md-offset-1">
    <p>
        <a asp-action="Create" asp-controller="StockReceiveMasts" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
           data-ajax-update="#Manjil-body">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.ValueDate)*@
                    <label asp-for="@Model.FirstOrDefault().ValueDate"></label>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.PortfolioAcName)*@
                    <label asp-for="@Model.FirstOrDefault().PortfolioAcName"></label>
                </th>
                <th>
                    @*  @Html.DisplayNameFor(model => model.Remarks)*@
                    <label asp-for="@Model.FirstOrDefault().Remarks"></label>
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>

                        @item.ValueDate.ToString("yyyy/MM/dd")
                    </td>
                    <td>

                        @item.PortfolioAcName
                    </td>
                    <td>

                        @item.Remarks
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="StockReceiveMasts" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
                           data-ajax-update="#Manjil-body" >Edit</a>|
                        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="StockReceiveMasts" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
                           data-ajax-update="#Manjil-body" >Details</a>|
                        <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="StockReceiveMasts" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
                           data-ajax-update="#Manjil-body">Delete</a>|
                        @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>