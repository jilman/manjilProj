@model Entity.Model.Stock

@{
    Layout = null;
}


<h4>Create Stock</h4>
<hr />

<div class="row">
    <div class="col-md-4 col-sm-offset-1">
        <form asp-action="Create" asp-controller="Stock" asp-route-area="Areas"
              data-ajax="true" data-ajax-method="POST" data-ajax-success="onSuccess(data)">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StockName" class="control-label"></label>
                <input asp-for="StockName" class="form-control" />
                <span asp-validation-for="StockName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Stock" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
       data-ajax-update="#Manjil-body" id="Index">Back to List</a>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body" id="msgBody">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



<script>
    function onSuccess(data) {

        if (data.status == 1) {
            //alert(data.message);

            $('#msgBody').html(data.message);
            $("#myModal").modal('show');
            $('#Index').click();
        }
        else {
            alert(data.message);

        }
    }
</script>