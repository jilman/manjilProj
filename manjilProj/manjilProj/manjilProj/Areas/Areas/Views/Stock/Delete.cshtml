@model Entity.Model.Stock
@{
    Layout = ViewBag.Layout;
}


<h3>Are you sure you want to delete this Stock ?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EntryDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EntryDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EntryUserID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EntryUserID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StockName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StockName)
        </dd>
    </dl>

    <form asp-action="Delete" asp-controller="Stock" asp-route-area="Areas"
              data-ajax="true" data-ajax-method="POST" data-ajax-success="onSuccess(data)">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
       
        <a asp-action="Index" asp-controller="Stock" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
           data-ajax-update="#Manjil-body" id="Index">Back to List</a>
    </form>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body" id="msgBody">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



<script>
    function onSuccess(data) {

        if (data.status == 1) {
            //alert(data.message);

            $('#msgBody').html(data.message);
            $("#myModal").modal('show');
            $('#Index').click();
        }
        else {
            alert(data.message);

        }
    }
</script>