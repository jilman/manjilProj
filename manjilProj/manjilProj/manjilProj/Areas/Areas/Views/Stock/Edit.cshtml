@model Entity.Model.Stock
@{
    Layout = ViewBag.Layout;
}

<h4>Update Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-sm-offset-1">
        <form asp-action="Edit" asp-controller="Stock" asp-area="Areas" data-ajax="true" data-ajax-method="POST" data-ajax-success="onSuccess(data,this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input asp-for="EntryDate" class="form-control" type="hidden" />
            <input asp-for="EntryUserID" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="StockName" class="control-label"></label>
                <input asp-for="StockName" class="form-control" />
                <span asp-validation-for="StockName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Stock" asp-area="Areas" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace"
       data-ajax-update="#Manjil-body" id="Index">Back to List</a>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body" id="msgBody">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<script>
    function onSuccess(data, that) {
        if (data.status == 1) {
            //alert(data.message);
           // $(that).find('input[type = text]').val('');
            $('#msgBody').html(data.message);
            $("#myModal").modal('show');
            $('#Index').click();

        }
        else {
            alert(data.message);

        }
    }
</script>
